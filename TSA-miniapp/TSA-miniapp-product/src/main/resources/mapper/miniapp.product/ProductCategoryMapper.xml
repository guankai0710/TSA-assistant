<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ryan.tsa.miniapp.product.mapper.ProductCategoryMapper">

    <select id="pageList" resultType="com.ryan.tsa.miniapp.product.vo.ProductCategoryVo" parameterType="com.ryan.tsa.miniapp.product.qo.ProductCategoryQo">
        SELECT
            product_category_id as productCategoryId,
            name as name,
            memo as memo
        FROM
            tsa_app_product_category
        <where>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="deleted != null">
                AND deleted = #{deleted}
            </if>
        </where>
    </select>

</mapper>
